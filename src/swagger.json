{
  "swagger": "2.0",
  "info": {
    "title": "Cabs Search System Application RESTFUL API",
    "description": "Cabs Search System Application REST API is an api that exposes api endpoints that",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "name": "Blessing Makaraba",
      "email": "blessingmakaraba@gmail.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Drivers",
      "description": "API endpoint for users in the system"
    },
    {
      "name": "Locations",
      "description": "API endpoint for saving driver location"
    },
    {
      "name": "Cabs",
      "description": "API endpoint for getting available cars"
    }
  ],
  "schemes": ["https", "http"],
  "paths": {
    "/drivers": {
      "post": {
        "tags": ["Drivers"],
        "summary": "Register a new driver",
        "description": "",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "driver",
            "in": "body",
            "summary": "",
            "description": "Details of the driver register",
            "operationId": "RegisterDriver",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Drivers"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Register a new driver"
          },
          "409": {
            "description": "email already exists"
          },
          "422": {
            "description": "validation errors"
          }
        }
      }
    },
    "/drivers/{token}/verify": {
      "get": {
        "tags": ["Drivers"],
        "summary": "Verify a drivers' email",
        "description": "",
        "operationId": "VerifyADriversEmail",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "description": "token of the driver",
            "required": true,
            "type": "string"
          },
          {
            "name": "user",
            "in": "path",
            "summary": "",
            "desciption": "Details of user that wants to sign in",
            "operationId": "SignInAUser",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "verification successful"
          },
          "401": {
            "description": "Authentication Failed"
          }
        }
      }
    },

    "/locations": {
      "post": {
        "tags": ["Locations"],
        "summary": "Save a driver location",
        "description": "",
        "oprationId": "CreateADriverLocation",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "type",
            "in": "body",
            "description": "drivers' Id",
            "required": true,
            "type": "string"
          },
          {
            "name": "type",
            "in": "body",
            "description": "drivers' latitude",
            "required": true,
            "type": "string"
          },
          {
            "name": "state",
            "in": "body",
            "description": "drivers' longitude",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Drivers' location saved succcessfully"
          },
          "422": {
            "description": "validation errors"
          }
        }
      }
    },
    "/cabs": {
      "get": {
        "tags": ["Cabs"],
        "summary": "Get available cabs",
        "description": "",
        "oprationId": "GetAvailableCabs",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "type",
            "in": "body",
            "description": "passenger's latitude",
            "required": true,
            "type": "string"
          },
          {
            "name": "state",
            "in": "body",
            "description": "passenger's longitude",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Location Retrieved Successfully"
          },
          "422": {
            "description": "validation errors"
          }
        }
      }
    }
  },

  "definitions": {
    "RegisterDriver": {
      "type": "object",
      "required": [
        "name",
        "email",
        "phone_number",
        "license_number",
        "car_number"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Blessing Makaraba Abobo"
        },
        "email": {
          "type": "string",
          "example": "suspieabobo@yahoo.com"
        },
        "phone_number": {
          "type": "string",
          "example": "8167672019"
        },
        "license_number": {
          "type": "string",
          "example": "ADC12819BC3"
        },
        "car_number": {
          "type": "string",
          "example": "AH-01-ZA-0838"
        }
      },
      "xml": {
        "name": "RegisterDriver"
      }
    }
  }
}
